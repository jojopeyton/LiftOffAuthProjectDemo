
<h1>Delete Artist</h1>

<form method="post">
    @foreach (var artist in ViewBag.artist)
    {
        <div class="form-group">
            <label>
                <span>@artist.Name</span>
                <input type="checkbox" name="artistIds" value="@artist.Id" class="form-control">
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Artists" class="btn btn-danger">

</form>